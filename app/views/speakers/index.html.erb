<h1>Listing speakers</h1>

<table>
  <tr>
    <th>Lname</th>
    <th>Fname</th>
    <th>Blog page</th>
    <th>Bio</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @speakers.each do |speaker| %>
  <tr>
    <td><%= speaker.lname %></td>
    <td><%= speaker.fname %></td>
    <td><%= speaker.blog_page %></td>
    <td><%= speaker.bio %></td>
    <td><%= speaker.email %></td>
    <td><%= link_to 'Show', speaker %></td>
    <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
    <td><%= link_to 'Destroy', speaker, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

